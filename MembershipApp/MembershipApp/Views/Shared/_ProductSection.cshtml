@model IEnumerable<MembershipApp.Models.ProductSection>

@foreach (var s in Model)
{
    if (s.Items.Count() > 0)
    {
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" class="panel-carret" href="#collapse@{@s.Id}">
                        <span class="pull-left glyphicon glyphicon-play gly-rotate-90"></span>
                        @s.Title
                    </a>
                </h4>
            </div>
            <div class="panel-collapse collapse in" style="" id="collapse@{@s.Id}">
                <div class="panel-body">
                    @foreach (var item in s.Items)
                    {
                        @Html.Partial("_ProductItemRow", item)
                    }
                </div>
            </div>
        </div>
        <br />
        }
    }
