@model IEnumerable<MembershipApp.Areas.Admin.Models.ProductItemModel>
    @using MembershipApp.Areas.Admin.Models

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr class="success">
        <th>@Html.DisplayNameFor(model => model.ProductTitle)</th>
        <th>@Html.DisplayNameFor(model => model.ItemTitle)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemTitle)
        </td>
        @Html.Partial("_TableButtonsPartial", new SmallButtonModel { Id = item.ItemId, ProductId = item.ProductId })
    </tr>
}

</table>
